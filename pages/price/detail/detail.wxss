page {
  background-color: #f5f6f7;
  height: 100%;
  letter-spacing: 1px;
}

.swiper-item {
  display: block;
}

.slide-image{
  width: 100%;
}

.goods_infor_top {
  background-color: #fff;
}

.goods_title {
  font-size: 15px;
  line-height: 30px;
  text-align: center;
  padding: 10rpx;
  height: 30px;
  position: relative;
}

.goods_title_left {
  font-size: 15px;
  line-height: 30px;
  text-align: left;
  padding: 10rpx;
  height: 30px;
  position: relative;
}

.content {
  font-size: 13px;
  margin: 10rpx;
  padding: 20rpx;
  color: #535353;
}

.detail {
  font-size: 13px;
  padding: 10rpx;
  color: #535353;
}

.btn_pdf {
  width: 100%;
  text-align: center;
}

.goods_deliver {
  margin-top: 20rpx;
  border-top: 1px solid #e5e5e5;
  color: #676767;
  font-size: 20rpx;
}

.zizhi-item {
  font-size: 25rpx;
  padding: 10rpx;
}

.zizhi-item label {
  color: gray;
}

.zizhi-item text {
  clear: right;
  float: right;
}

.goods_price {
  padding-left: 10px;
  font-size: 16px;
  color: #f00;
}

.tips {
  display: block;
  margin-top: 10rpx;
  color: #676767;
  font-size: 20rpx;
}

.goods_bottom_btn {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 80rpx;
  z-index: 99;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.goods_half_half {
  width: 100%;
  height: 80rpx;
  font-size: 40rpx;
  line-height: 80rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  background-color: #f55d04;
}



