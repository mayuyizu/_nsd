
<view class="container">
    <image class="loginimg" src="../../image/login.jpg" mode="widthFix"></image>
</view>

<view class="main-body">
  <form bindsubmit="formLogin">
    <view>
      <input name="inputName" bindinput="bindNameInput" class="input-login" placeholder="输入邮箱前缀" />
    </view>
    <view class="hs20"></view>
    <view>
      <input name="inputPwd" password="true" bindinput="bindPwdInput" class="input-login" placeholder="输入邮箱密码" bindconfirm="bindInputLogin"  />
    </view>
    <view class="hs20"></view>
    <view>
      <button class="btn-login" hover-class="btn-login-hover" form-type="submit">登录</button>
    </view>
  </form>
</view>